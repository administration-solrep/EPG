<?xml version="1.0" encoding="UTF-8" ?>
<!--
  Cet composant contribue les types de documents de l'application SOLON MGPP.
-->
<component name="fr.dila.solonmgpp.core.type">
  <require>org.nuxeo.platform.TemplateSources.doctypes</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">
    
    <!-- Fiche Dossier Root -->
    <doctype name="FicheDossierRoot" extends="Folder" />
    
    <doctype name="EcheancierPromulgationRoot" extends="Folder" />
    <doctype name="SemaineParlementaireRoot" extends="Folder" />
    <doctype name="ActiviteParlementaireRoot" extends="Folder" />
    <doctype name="NotificationDocRoot" extends="Folder" />
    
    
    <!-- //////////////////////// Fiches Presentations //////////////////////////////////// -->
    <!-- Fiche Loi -->
    <doctype name="FicheLoi" extends="Document">
      <schema name="fiche_loi" />
      <facet name="Folderish" />
      <prefetch />
    </doctype>
    
    <!-- Fiche Presentation Depot de rapport -->
    <doctype name="FichePresentationDR" extends="Document">
      <schema name="fiche_presentation_dr" />
      <prefetch />
    </doctype>
    
    <!-- Fiche Presentation OEP (Organisme extra parlementaire) -->
    <doctype name="FichePresentationOEP" extends="Document">
      <schema name="fiche_presentation_oep" />
      <facet name="Folderish" />
      <prefetch />
    </doctype>
    
    <!-- Fiche Presentation IE (Intervention exerterieure) -->
    <doctype name="FichePresentationIE" extends="Document">
      <schema name="fiche_presentation_ie" />
      <facet name="Folderish" />
      <prefetch />
    </doctype>
    
    <!-- Representant OEP (Organisme extra parelementaire) -->
    <doctype name="RepresentantOEP" extends="Document">
      <schema name="representant_oep" />
      <prefetch />
    </doctype>
    
    <!-- Fiche Presentation 341 (Article 34-1) -->
    <doctype name="FichePresentation341" extends="Document">
      <schema name="fiche_presentation_341" />
      <facet name="Folderish" />
      <prefetch />
    </doctype>
    
    <!-- Fiche Presentation AN (Avis de Nomination) -->
    <doctype name="FichePresentationAVI" extends="Document">
      <schema name="fiche_presentation_avi" />
      <facet name="Folderish" />
      <prefetch />
    </doctype>
    
    <!-- Fiche Presentation Decret (Decret) -->
    <doctype name="FichePresentationDecret" extends="Document">
      <schema name="fiche_presentation_decret" />
    </doctype>

    <!-- Fiche Presentation DPG (Déclaration sur un sujet déterminé) -->
    <doctype name="FichePresentationSD" extends="Document">
      <schema name="fiche_presentation_sd" />
      <facet name="Folderish" />
    </doctype>


    <!-- Fiche Presentation SD (Déclaration de politique générale) -->
    <doctype name="FichePresentationDPG" extends="Document">
      <schema name="fiche_presentation_dpg" />
      <facet name="Folderish" />
    </doctype>
    
    <!-- Fiche Presentation JSS (Article 28-3C) -->
    <doctype name="FichePresentationJSS" extends="Document">
      <schema name="fiche_presentation_jss" />
      <facet name="Folderish" />
    </doctype>
    
    <!-- Fiche Presentation AUD (Demandes d'audition) -->
    <doctype name="FichePresentationAUD" extends="Document">
      <schema name="fiche_presentation_aud" />
      <facet name="Folderish" />
    </doctype>


    <!-- Fiche Presentation DOC (Autres documents transmis aux assemblées) -->
    <doctype name="FichePresentationDOC" extends="Document">
      <schema name="fiche_presentation_doc" />
      <facet name="Folderish" />
    </doctype>

    
    <!-- Fichier SOLON MGPP (FDD EOP/AVI)-->
    <doctype name="FileSolonMgpp" extends="File">
      <schema name="file_solon_mgpp" />
      <prefetch />
    </doctype>
    
    <!-- Representant AVI (Avis nomination) -->
    <doctype name="RepresentantAVI" extends="Document">
      <schema name="representant_avi" />
      <prefetch />
    </doctype>
    
    <!-- Representant AUD (DEMANDE AUDITION) -->
    <doctype name="RepresentantAUD" extends="Document">
      <schema name="representant_aud" />      
      <prefetch />
    </doctype>

    <!-- //////////////////////////////////////////////////////////// -->
    
    <!-- Navette -->
    <doctype name="Navette" extends="Document">
      <schema name="navette" />
      <prefetch />
    </doctype>

    <!-- Echeancier Promulgation-->
    <doctype name="EcheancierPromulgation" extends="Document">
      <schema name="echeancier_promulgation" />
      <facet name="Folderish" />
      <prefetch />
    </doctype>
    
    <!-- semaine parlementaire-->
    <doctype name="SemaineParlementaire" extends="Document">
      <schema name="semaine_parlementaire" />
      <facet name="Folderish" />
      <prefetch />
    </doctype>
    
    <!-- activite parlementaire-->
    <doctype name="ActiviteParlementaire" extends="Document">
      <schema name="activite_parlementaire" />
      <facet name="Folderish" />
      <prefetch />
    </doctype>
    
    <!-- Parametrage MGPP -->
    <doctype name="ParametrageMgpp" extends="Document">
      <schema name="parametrage_mgpp" />
      <prefetch />
    </doctype>
    
    <!-- notification doc-->
    <doctype name="NotificationDoc" extends="Document">
      <schema name="notification_doc" />
      <prefetch />
    </doctype>

    <doctype name="CommunicationCourrier" extends="TemplateBasedFile">
      <schema name="communication_courrier" />
    </doctype>

    <doctype name="ModeleCourrierRoot" extends="Folder" />

    <doctype name="ModeleCourrier" extends="TemplateSource">
      <schema name="modele_courrier" />
      <prefetch>dc:title, mdc:types_communication</prefetch>
    </doctype>

  </extension>
</component>
