<?xml version="1.0" encoding="UTF-8" ?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.dila.solonepg</groupId>
		<artifactId>solon-epg-parent</artifactId>
		<version>4.0.2-1</version>
	</parent>

	<artifactId>solon-epg-distribution</artifactId>
	<name>SOLON EPG distribution</name>
	<packaging>pom</packaging>

	<properties>
		<target>build</target>

		<liquibase.contexts>dev,solonepg</liquibase.contexts>
		<!-- à surcharger dans les profils qui exploitent le déploiement automatisé -->
		<deploy.ant.target>undefined</deploy.ant.target>
		<deploy.ssh.host>undefined</deploy.ssh.host>
		<deploy.ant.skip>true</deploy.ant.skip>
		<deploy.script>undefined</deploy.script>
		<deploy.install.confdir>undefined</deploy.install.confdir><!-- dans le cas d'utilisation de solrep-install.sh -->

		<!-- configurations communes -->
		<deploy.ssh.username>root</deploy.ssh.username>
		<deploy.ssh.password>Admin123</deploy.ssh.password>
		<deploy.ssh.keyfile>${user.home}/.ssh/id_rsa</deploy.ssh.keyfile>
		<deploy.destdir>/opt/deploy</deploy.destdir>
		<deploy.archive>${project.artifactId}-${project.version}-server.zip</deploy.archive>

		<distrib.nuxeo.classifier />
		<distrib.datapath>${project.build.directory}/distribsetup</distrib.datapath>
		<distrib.app.keyname>solon-epg</distrib.app.keyname>
		<distrib.app.contextpath>solon-epg</distrib.app.contextpath>
		<distrib.nuxeo.useDefaultContextPath>false</distrib.nuxeo.useDefaultContextPath>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.nuxeo.template.rendering</groupId>
			<artifactId>nuxeo-template-rendering-xdocreport</artifactId>
		</dependency>
        <dependency>
            <groupId>org.nuxeo.ecm.platform</groupId>
            <artifactId>nuxeo-platform-lang</artifactId>
        </dependency>

		<dependency>
			<groupId>fr.dila.solonepg</groupId>
			<artifactId>solon-epg-webengine</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.dila.solonepg</groupId>
			<artifactId>solon-epg-elastic-bundle</artifactId>
		</dependency>

		<dependency>
			<groupId>fr.dila.solonmgpp</groupId>
			<artifactId>solon-mgpp-webengine</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpcore</artifactId>
		</dependency>

		<!-- birt -->
		<dependency>
			<groupId>fr.dila.solon</groupId>
			<artifactId>solon2ng-birt-common</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.dila.solon</groupId>
			<artifactId>solon2ng-birt-app</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.dila.solon</groupId>
			<artifactId>solon2ng-birt-models-epg</artifactId>
		</dependency>

		<dependency>
			<groupId>fr.dila.st</groupId>
			<artifactId>socle-transverse-ui</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.dila.ss</groupId>
			<artifactId>socle-solrep-ui</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.dila.solonepg</groupId>
			<artifactId>solon-epg-ui</artifactId>
		</dependency>
		<dependency>
			<groupId>fr.dila.solonepg</groupId>
			<artifactId>solon-ng-edit</artifactId>
		</dependency>

		<!-- dependances Oracle -->
		<dependency>
			<groupId>com.oracle.ojdbc</groupId>
			<artifactId>ojdbc8</artifactId>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.nuxeo.build</groupId>
				<artifactId>ant-assembly-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>antbuild</id>
						<phase>package</phase>
						<goals>
							<goal>build</goal>
						</goals>
						<configuration>
							<buildFiles>
								<buildFile>${basedir}/src/main/assemble/assembly.xml</buildFile>
							</buildFiles>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>antrun-deploy</id>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.nuxeo.build</groupId>
					<artifactId>ant-assembly-maven-plugin</artifactId>
				</plugin>
				<plugin>
					<artifactId>maven-antrun-plugin</artifactId>
					<version>1.7</version>
					<dependencies>
						<dependency>
							<groupId>ant</groupId>
							<artifactId>ant-jsch</artifactId>
							<version>1.6.5</version>
						</dependency>
						<dependency>
							<groupId>com.jcraft</groupId>
							<artifactId>jsch</artifactId>
							<version>0.1.54</version>
						</dependency>
					</dependencies>
					<executions>
						<execution>
							<id>antrun-deploy</id>
							<phase>package</phase>
							<goals>
								<goal>run</goal>
							</goals>
							<configuration>
								<target>
									<property name="deploy.srcdir" value="${project.build.directory}" />
									<property name="deploy.destdir" value="${deploy.destdir}" />
									<property name="deploy.archive" value="${deploy.archive}" />
									<property name="ssh.host" value="${deploy.ssh.host}" />
									<property name="ssh.username" value="${deploy.ssh.username}" />
									<property name="ssh.password" value="${deploy.ssh.password}" />
									<property name="user.keyfile" value="${deploy.ssh.keyfile}" />
									<property name="deploy.script" value="${deploy.script}" />
									<property name="deploy.install.confdir" value="${deploy.install.confdir}" />

									<ant antfile="build.xml" target="${deploy.ant.target}" />
									<chmod file="target/classes/" perm="755" />
								</target>
								<skip>${deploy.ant.skip}</skip>
							</configuration>
						</execution>
					</executions>
				</plugin>
