<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="LogToFile" fileName="/tmp/log/solonbirtgenerator.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="fr.dila" level="error" additivity="false">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Root level="error">
      		<AppenderRef ref="LogToFile"/>
    	</Root>
    </Loggers>
</Configuration>
