<?xml version="1.0"?>

<component name="fr.dila.solonmgpp.web.widget.recherche">
  <require>fr.dila.solonmgpp.web.widget.type</require>
  
  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgets">

    <!-- widget nor -->
    <widget name="recherche_nor_widget" type="text">
      <labels>
        <label mode="any">label.mgpp.recherche.identifiant</label>
      </labels>
      <translated>true</translated>
      <fields>
        <field>idDossier</field>
      </fields>
      <properties widgetMode="any">
        <property name="isVisible">mgpp_autresDocumentsTransmisAuxAssemblees,mgpp_demandeAudition,mgpp_demandeMiseEnOeuvreArticle283C,mgpp_declarationSurUnSujetDetermine,mgpp_declarationDePolitiqueGenerale</property>
        <property name="property">idDossier</property>
        <property name="styleClass">input125</property>
      </properties>
    </widget>

    <!-- widget objet -->
    <widget name="recherche_objet_widget" type="text">
      <labels>
        <label mode="any">label.mgpp.recherche.objet</label>
      </labels>
      <translated>true</translated>
      <fields>
        <field>objet</field>
      </fields>
      <properties widgetMode="any">
        <property name="isVisible">mgpp_procedureLegislative,mgpp_interventionExterieure,mgpp_resolutionArticle341,mgpp_designationOEP,mgpp_avisNomination,mgpp_autresDocumentsTransmisAuxAssemblees,mgpp_demandeMiseEnOeuvreArticle283C,mgpp_declarationSurUnSujetDetermine,mgpp_declarationDePolitiqueGenerale</property>
        <property name="property">objet</property>
        <property name="styleClass">input125</property>
      </properties>
    </widget>

    <!-- widget numeroNor -->
    <widget name="recherche_numeroNor_widget" type="text">
      <labels>
        <label mode="any">label.mgpp.recherche.nor</label>
      </labels>
      <translated>true</translated>
      <fields>
        <field>numeroNor</field>
      </fields>
      <properties widgetMode="any">
        <property name="isVisible">mgpp_publication,mgpp_depotDeRapport,mgpp_procedureLegislative,mgpp_resolutionArticle341,mgpp_decret</property>
        <property name="property">numeroNor</property>
        <property name="styleClass">input125</property>
      </properties>
    </widget>

    <!-- widget titreActe -->
    <widget name="recherche_titreActe_widget" type="text">
      <labels>
        <label mode="any">label.mgpp.recherche.objet</label>
      </labels>
      <translated>true</translated>
      <fields>
        <field>titreActe</field>
      </fields>
      <properties widgetMode="any">
        <property name="isVisible">mgpp_publication</property>
        <property name="property">titreActe</property>
        <property name="styleClass">input125</property>
      </properties>
    </widget>
    
    <!-- widget nor -->
    <widget name="recherche_identifiant_widget" type="text">
      <labels>
        <label mode="any">label.mgpp.recherche.identifiant</label>
      </labels>
      <translated>true</translated>
      <fields>
        <field>idDossier</field>
      </fields>
      <properties widgetMode="any">
        <property name="isVisible">mgpp_interventionExterieure,mgpp_designationOEP,mgpp_avisNomination</property>
        <property name="property">idDossier</property>
        <property name="styleClass">input125</property>
      </properties>
    </widget>
    
    <!-- widget organisme -->
    <widget name="recherche_nom_organisme_widget" type="text">
      <labels>
        <label mode="any">label.mgpp.recherche.nomOrganisme</label>
      </labels>
      <translated>true</translated>
      <fields>
        <field>nomOrganisme</field>
      </fields>
      <properties widgetMode="any">
        <property name="isVisible">mgpp_demandeAudition</property>
        <property name="property">nomOrganisme</property>
        <property name="styleClass">input125</property>
      </properties>
    </widget>
    
  </extension>
</component>
