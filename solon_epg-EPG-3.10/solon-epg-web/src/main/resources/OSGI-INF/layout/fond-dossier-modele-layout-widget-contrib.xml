<?xml version="1.0"?>

<component name="fr.dila.solonepg.web.widget.fondDossierModele">

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="widgets">

  <!-- widget formatAutorise -->
  <widget name="format_autorise_fdd_model" type="template">
    <labels>
      <label mode="any">label.epg.fondDossierModele.formatAutorise</label>
    </labels>
    <translated>true</translated>
    <fields>
      <field>mfddr:formatAutorise</field>
    </fields>
    <properties widgetMode="any">
      <property name="template">/widgets/add_file_format_model_fdd_suggestion_widget_template.xhtml</property>
      <property name="directoryName">format_fichier_autorise</property>
      <property name="minChars">1</property>
    </properties>
  </widget>

   <!-- widget typeActe avec liste de suggestion -->
  <widget name="type_acte_fdd_model" type="template">
    <labels>
      <label mode="any">label.epg.fondDossierModele.typeActe</label>
    </labels>
    <translated>true</translated>
    <fields>
      <field>mfdd:typeActe</field>
    </fields>
    <properties widgetMode="any">
      <property name="template">/widgets/type_acte_model_fdd_suggestion_widget_template.xhtml</property>
      <property name="directoryName">type_acte</property>
    </properties>
  </widget>
  
    <!-- widget title -->
  <widget name="title" type="text">
    <labels>
      <label mode="any">label.epg.fondDossierModele.nom</label>
    </labels>
    <translated>true</translated>
    <fields>
      <field>dc:title</field>
    </fields>
    <properties widgetMode="any">
      <property name="styleClass">largeSolonEpgInput</property>
    </properties>
  </widget>
  
  </extension>

</component>
