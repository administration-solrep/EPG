<?xml version="1.0"?>

<!-- Ce composant contribue les layouts + widgets nécessaires à la gestion du paramètrage adamant. -->
<component name="fr.dila.solonepg.web.layout.parametrageAdamant">

	<extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager" point="layouts">

		<layout name="parametrage_adamant_element_manifest">
			<templates>
				<template mode="any">/layouts/layout_default_template.xhtml</template>
			</templates>
			<rows>
				<row>
					<widget>numero_solon</widget>
				</row>
				<row>
					<widget>originating_agency_bloc_identifier</widget>
				</row>
				<row>
					<widget>submission_agency_bloc_identifier</widget>
				</row>
				<row>
					<widget>archival_profile</widget>
				</row>
				<row>
					<widget>originating_agency_identifier</widget>
				</row>
				<row>
					<widget>submission_agency_identifier</widget>
				</row>
			</rows>
			<widget name="numero_solon" type="int">
				<labels>
					<label mode="any">label.epg.parametrage.adamant.numeroSolon</label>
				</labels>
				<translated>true</translated>
				<properties widgetMode="edit">
					<property name="required">true</property>
				</properties>
				<fields>
					<field>pad:numeroSolon</field>
				</fields>
			</widget>
			<widget name="originating_agency_bloc_identifier" type="text">
				<labels>
					<label mode="any">label.epg.parametrage.adamant.originatingAgencyBlocIdentifier</label>
				</labels>
				<translated>true</translated>
				<properties widgetMode="edit">
					<property name="required">true</property>
				</properties>
				<fields>
					<field>pad:originAgencyBlocIdentifier</field>
				</fields>
			</widget>
			<widget name="submission_agency_bloc_identifier" type="text">
				<labels>
					<label mode="any">label.epg.parametrage.adamant.submissionAgencyBlocIdentifier</label>
				</labels>
				<translated>true</translated>
				<properties widgetMode="edit">
					<property name="required">true</property>
				</properties>
				<fields>
					<field>pad:submisAgencyBlocIdentifier</field>
				</fields>
			</widget>
			<widget name="archival_profile" type="text">
				<labels>
					<label mode="any">label.epg.parametrage.adamant.archivalProfile</label>
				</labels>
				<translated>true</translated>
				<properties widgetMode="edit">
					<property name="required">true</property>
				</properties>
				<fields>
					<field>pad:archivalProfile</field>
				</fields>
			</widget>
			<widget name="originating_agency_identifier" type="text">
				<labels>
					<label mode="any">label.epg.parametrage.adamant.originatingAgencyIdentifier</label>
				</labels>
				<translated>true</translated>
				<properties widgetMode="edit">
					<property name="required">true</property>
				</properties>
				<fields>
					<field>pad:originatingAgencyIdentifier</field>
				</fields>
			</widget>
			<widget name="submission_agency_identifier" type="text">
				<labels>
					<label mode="any">label.epg.parametrage.adamant.submissionAgencyIdentifier</label>
				</labels>
				<translated>true</translated>
				<properties widgetMode="edit">
					<property name="required">true</property>
				</properties>
				<fields>
					<field>pad:submissionAgencyIdentifier</field>
				</fields>
			</widget>
		</layout>

		<layout name="parametrage_adamant_extraction">
			<templates>
				<template mode="any">/layouts/layout_default_template.xhtml</template>
			</templates>
			<rows>
				<row>
					<widget>delai_eligibilite</widget>
				</row>
				<row>
					<widget>nb_dossier_extraction</widget>
				</row>
			</rows>
			<widget name="delai_eligibilite" type="int">
				<labels>
					<label mode="any">label.epg.parametrage.adamant.delaiEligibilite</label>
				</labels>
				<translated>true</translated>
				<properties widgetMode="edit">
					<property name="required">true</property>
				</properties>
				<fields>
					<field>pad:delaiEligibilite</field>
				</fields>
			</widget>
			<widget name="nb_dossier_extraction" type="int">
				<labels>
					<label mode="any">label.epg.parametrage.adamant.nbDossierExtraction</label>
				</labels>
				<translated>true</translated>
				<properties widgetMode="edit">
					<property name="required">true</property>
				</properties>
				<fields>
					<field>pad:nbDossierExtraction</field>
				</fields>
			</widget>
		</layout>
	</extension>
</component>
