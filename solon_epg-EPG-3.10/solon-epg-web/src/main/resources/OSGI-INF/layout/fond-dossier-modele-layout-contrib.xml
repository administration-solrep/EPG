<component name="fr.dila.solonepg.web.layout.fondDossierModel">
  <require>fr.dila.solonepg.web.widget.fondDossierModele</require>
  
  <!-- DILA question layout -->
  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">
 
    <layout name="fond_dossier_modele_racine">
  
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
          </template>
      </templates>
  
      <rows>
        <row>
          <widget>format_autorise_fdd_model</widget>
        </row>
      </rows>

    </layout>
    
    <layout name="fond_dossier_modele">
  
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
          </template>
      </templates>
  
      <rows>
        <row>
          <widget>type_acte_fdd_model</widget>
        </row>
      </rows>

    </layout>
    
    <layout name="fond_dossier_modele_repertoire_formulaire">

      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml
          </template>
      </templates>
  
      <rows>
        <row>
          <widget>title</widget>
        </row>
      </rows>
    
    </layout>
  
  </extension>

</component>