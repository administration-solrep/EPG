<?xml version="1.0"?>

<!-- Ce composant permet de contribuer des valeurs par défaut des paramètres 
	de configuration de l'application SOLON EPG. /!\ Pour configurer l'application, 
	ne pas modifier les paramètres dans ce fichier mais dans nuxeo.conf ! -->
<component name="fr.dila.solonepg.core.config">
	<extension target="fr.dila.st.core.service.ConfigService"
		point="configParameter">
		<!-- Configuration du bulk mode -->
		<parameter>
			<name>nuxeo.bulk.mode</name>
			<value>false</value>
		</parameter>

		<!-- Nom de l'utilisateur qui possède les Mailbox poste -->
		<parameter>
			<name>solonepg.mailboxPoste.owner</name>
			<value>adminsgg</value>
		</parameter>

		<!-- Nom de l'utilisateur qui exécute les batch -->
		<parameter>
			<name>nuxeo.batch.user</name>
			<value>Administrator</value>
		</parameter>

		<!-- Adress mail from -->
		<parameter>
			<name>mail.from</name>
			<value>ne-pas-repondre@dila.gouv.fr</value>
		</parameter>

		<!-- Mode Injection In Progress -->
		<parameter>
			<name>mode.injection.inProgress</name>
			<value>false</value>
		</parameter>

	</extension>
</component>